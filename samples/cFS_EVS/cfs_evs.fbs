// IDL for cFS EVS

namespace cFSEVS;

table SendEvent {
    EventID:uint16;
    EventType:uint16;
    Spec:string;
}

table SendEventWithAppID {
    EventID:uint16;
    EventType:uint16;
    AppID:uint32;
    Spec:string;
}

union Args {
    // CFE_EVS_Register
    // CFE_EVS_Unregister
    SendEvent,
    SendEventWithAppID
    // CFE_EVS_SendTimedEvent
    // CFE_EVS_ResetFilter
    // CFE_EVS_ResetAllFilters
}

